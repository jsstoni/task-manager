generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int     @id @default(autoincrement())
  email    String  @unique @db.Char(60)
  password String
  Tasks    Tasks[]

  @@map("users")
}

model Tasks {
  id       Int       @id @default(autoincrement())
  title    String
  content  String    @db.Text
  priority String
  log      Int       @db.Int
  duedate  DateTime?
  usersId  Users     @relation(fields: [user_id], references: [id])
  user_id  Int

  @@map("tasks")
}
